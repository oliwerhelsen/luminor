#!/usr/bin/env php
<?php

declare(strict_types=1);

/**
 * Lumina DDD Framework CLI
 *
 * This is the entry point for the framework's CLI tools.
 * It provides code generation commands and development utilities.
 */

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$autoloader = null;
foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        $autoloader = $path;
        break;
    }
}

if ($autoloader === null) {
    fwrite(STDERR, "Error: Could not find Composer autoloader.\n");
    fwrite(STDERR, "Please run 'composer install' first.\n");
    exit(1);
}

require $autoloader;

use Lumina\DDD\Console\Application;

// Create and run the console application
$app = new Application();
$app->setName('Lumina DDD Framework');
$app->setVersion('1.0.0');

$exitCode = $app->run($_SERVER['argv'] ?? []);
exit($exitCode);
