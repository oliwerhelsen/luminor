{
  "name": "luminor/luminor",
  "description": "A modern, open-source DDD framework for building REST APIs and domain-driven applications with event sourcing",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "ddd",
    "domain-driven-design",
    "cqrs",
    "event-sourcing",
    "framework",
    "rest-api",
    "luminor",
    "php",
    "openapi",
    "observability"
  ],
  "homepage": "https://luminor-php.github.io/luminor",
  "support": {
    "issues": "https://github.com/luminor-php/luminor/issues",
    "source": "https://github.com/luminor-php/luminor",
    "docs": "https://luminor-php.github.io/luminor",
    "discussions": "https://github.com/luminor-php/luminor/discussions"
  },
  "authors": [
    {
      "name": "Luminor DDD Framework Team"
    }
  ],
  "bin": [
    "bin/luminor"
  ],
  "require": {
    "php": "^8.2",
    "psr/container": "^2.0",
    "psr/log": "^3.0",
    "symfony/http-foundation": "^7.0|^6.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-strict-rules": "^1.5"
  },
  "autoload": {
    "files": [
      "src/Support/helpers.php"
    ],
    "psr-4": {
      "Luminor\\": "src/"
    }
  },
  "suggest": {
    "vlucas/phpdotenv": "Required for .env file support (^5.5)",
    "doctrine/dbal": "Required for database queue driver (^3.0|^4.0)",
    "doctrine/migrations": "Required for database migrations (^3.0)",
    "predis/predis": "Required for Redis queue/cache driver (^2.0)",
    "monolog/monolog": "For advanced logging features (^3.0)",
    "ext-swoole": "For high-performance async HTTP server (use: luminor serve --server=swoole)",
    "ext-openswoole": "Alternative to ext-swoole for async HTTP server"
  },
  "autoload-dev": {
    "psr-4": {
      "Luminor\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse",
    "check": [
      "@analyse",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
