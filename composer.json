{
    "name": "lumina/ddd-framework",
    "description": "A commercial DDD boilerplate framework for building REST APIs and domain-driven applications",
    "type": "library",
    "license": "proprietary",
    "keywords": [
        "ddd",
        "domain-driven-design",
        "cqrs",
        "framework",
        "rest-api",
        "lumina",
        "php"
    ],
    "authors": [
        {
            "name": "Lumina DDD Framework Team"
        }
    ],
    "require": {
        "php": "^8.2",
        "utopia-php/http": "^0.36"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Lumina\\DDD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lumina\\DDD\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "check": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
